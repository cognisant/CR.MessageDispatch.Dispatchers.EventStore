<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>CR.MessageDispatch.EventStore</AssemblyName>
    <RootNamespace>CR.MessageDispatch.EventStore</RootNamespace>
    <Authors>Cognisant Research</Authors>
    <Company>Cognisant Research</Company>
    <Copyright>Cognisant Research 2018</Copyright>
    <PackageLicenseUrl>https://github.com/cognisant/MessageDispatch.EventStore/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/cognisant/MessageDispatch.EventStore</PackageProjectUrl>
    <RepositoryUrl>https://github.com/cognisant/MessageDispatch.EventStore</RepositoryUrl>
    <PackageIconUrl>https://github.com/cognisant/MessageDispatch.EventStore/blob/master/logo.png</PackageIconUrl>
    <PackageTags>Message Dispatching, Event Sourcing</PackageTags>
    <PackageId>CR.MessageDispatch.EventStore</PackageId>
    <Product>CR.MessageDispatch</Product>
    <Description>A package to use EventStore to get Events to Dispatch using CR.MessageDispatch.</Description>
    <PackageReleaseNotes>https://GitHub.com/Cognisant/MessageDispatch.EventStore/releases/tag/$(Tag)</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard2.0\CR.MessageDispatch.EventStore.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard2.0\CR.MessageDispatch.EventStore.xml</DocumentationFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CR.CodeStyle.CSharp.Full" Version="1.0.1">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="CR.MessageDispatch.Core" Version="1.0.0-rc0001" />
    <PackageReference Include="EventStore.ClientAPI.NetCore" Version="4.1.0.23" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
  </ItemGroup>

</Project>
